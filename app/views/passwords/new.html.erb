<% content_for :jumbotron do %>
  <%= raw t(".header") %>
<% end %>

<div class="content-area">
  <div class="content-area-sidebar">
    <div class="sidebar-area" data-xtabs="data-xtabs">
      <div class="sidebar-section icon-boxes horizontal">
        <div class="icon-box-column">
          <a href="#login-tab" data-xtab="data-xtab" class="icon-box active">
            <div class="icon-box-content">
              <i class="fa fa-lock"></i>
              <div class="icon-box-label"><%= t(".reset") %></div>
            </div>
          </a>
        </div>

        <div class="icon-box-column">
        </div>

      </div>

      <div class="sidebar-section content">

        <div data-xtab-content="data-xtab-content" id="login-tab">
          <%= render partial: '/passwords/reset' %>
        </div>
      </div>
    </div>
  </div>

  <div class="content-area-main">

    <%= render partial: '/sessions/faq' %>

  </div>
</div>
