    <div class="events-list-item">
      <div class="events-list-item-image" style="background-image: url(<%= event.image.url(:list) %>">
      </div>

      <div class="events-list-item-details">
        <div class="events-list-item-price"><span>free</span></div>

        <div class="events-list-item-date">
          <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
          <%= EventDecorator.new(event).formatted_date %>
        </div>

        <h4 class="events-list-item-title">
          <%= link_to event.title, event_path(event) %>
        </h4>

        <div class="events-list-item-content">
          <%= event.description %>
        </div>

        <div class="events-list-item-footer">
          <ul class="events-list-item-tags">
            <li><a href="#">#<%= event.category.name %> </a></li>
            <li><a href="#">#<%= event.location.city %></a></li>
          </ul>

          <div class="events-list-item-actions">
            <a href="#">
              <i class="fa fa-heart"></i>
              Fav It
            </a>
            <a href="#">
              <i class="fa fa-share"></i>
              Share
            </a>
          </div>

        </div>

      </div>
    </div>
