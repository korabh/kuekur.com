<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="footer-content">
        <div class="footer-column">
          <h6 class="footer-column-title"><%= t(".plan_events") %></h6>
          <ul class="footer-list">
            <li>
              <a href="#">Browse Events</a>
            </li>
            <li>
              <a href="#">Popular</a>
            </li>
            <li>
              <a href="#">Latest</a>
            </li>
            <li>
              <a href="#">To be announced</a>
            </li>
          </ul>
        </div>
        <div class="footer-column">
          <h6 class="footer-column-title"><%= t(".find_events") %></h6>
          <ul class="footer-list">
            <% Location.all.pluck(:city).uniq.last(5).each do |city| %>
              <li>
                <a href="#"><%= "#{city} Events" %></a>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="footer-column">
          <h6 class="footer-column-title"><%= t(".pages") %></h6>
          <ul class="footer-list">
            <li>
              <a href="#">Terms of Use</a>
            </li>
            <li>
              <a href="#">F.A.Q</a>
            </li>
            <li>
              <a href="#">Contact us</a>
            </li>
          </ul>
        </div>

        <div class="footer-column">
          <h6 class="footer-column-title"><%= t(".account") %></h6>
          <ul class="footer-list">
            <li>
              <%= link_to t(".profile"), edit_profile_path(anchor: "account-settings") %>
            </li>
            <li>
              <%= link_to t(".events"), edit_profile_path(anchor: "events") %>
            </li>
            <li>
              <%= link_to t(".bookmarks"), edit_profile_path(anchor: "bookmarks") %>
            </li>
            <% if current_user.admin? %>
              <li>
                <%= link_to t(".new_event"), new_event_path %>
              </li>
            <% end %>

            <li>
              <% if signed_in? %>
                <%= link_to t(".sign_out"), sign_out_path, method: :delete %>
              <% end %>
            </li>
          </ul>
        </div>

        <div class="footer-column">
          <h6 class="footer-column-title"><%= t(".connect_with_us") %></h6>

          <div class="footer-social">
            <ul class="footer-social-icons">
              <li class="footer-social-icon">
                <a href="https://www.facebook.com/" target="_blank">
                  <i class="fa fa-facebook"></i>
                </a>
              </li>
              <li class="footer-social-icon">
                <a href="https://www.twitter.com/" target="_blank">
                  <i class="fa fa-twitter"></i>
                </a>
              </li>
              <li class="footer-social-icon">
                <a href="https://www.instagram.com/" target="_blank">
                  <i class="fa fa-instagram"></i>
                </a>
              </li>
            </ul>
            <p>
              <a href="#">Follow us</a>
              to stay in touch</p>
          </div>

        </div>
      </div>

    </div>
  </div>
</footer>
